<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{% block pagetitle %}QualInvestor{% endblock pagetitle%}</title>

	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
	<link rel="stylesheet" href="{{relpath}}/static/qualinv.css" />
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
	<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
	{% block jsdata %}{% endblock jsdata %}
</head>
<body class="container-fluid" style="padding-top: 15px;">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="{{relpath}}/">QualInvestor</a>
				<a class="navbar-brand" href="{{relpath}}/transactions">Transactions</a>
				<a class="navbar-brand" href="{{relpath}}/position">Position</a>
				<a class="navbar-brand" href="{{relpath}}/pnl">Profit&amp;Loss</a>
				<a class="navbar-brand" href="{{relpath}}/assets">Assets</a>
				<a class="navbar-brand" href="{{relpath}}/currencies">Currencies</a>
			</div>

			<div>
				<ul class="nav navbar-nav navbar-right">
					{% if not user %}
					<li><a href="{{relpath}}/login?redir={{relpath}}/"><i class="fa fa-sign-in"></i> Login</a></li>
					{% else %}
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome {{user.display}}! <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="{{relpath}}/logout?redir={{relpath}}/">
									<i class="fa fa-sign-out"></i> Logout
								</a>
							</li>
						</ul>
					</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>

	{% block alert %}{% if alert_msg %}<div class="alert alert-{{alert_type}}">{{alert_msg}}</div>{% endif %}{% endblock alert %}
	{% block content %}{% endblock content %}
	{% block auth %}{% endblock auth %}
</body>
</html>

